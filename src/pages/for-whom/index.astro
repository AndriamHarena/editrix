---
import Layout from '../../layouts/Layout.astro';

const profiles = [
	{
		titre: "Créateurs YouTube, TikTok, Reels",
		description: "Production rapide, vidéos performantes, constance de publication",
		icon: "video",
		avant: [
			"8-10h de montage par vidéo",
			"Publication irrégulière par manque de temps",
			"Formats adaptés manuellement",
			"Incertitude sur la performance avant publication"
		],
		apres: [
			"2-3h de montage par vidéo avec Editrix",
			"Publication régulière et constante",
			"Tous les formats générés automatiquement",
			"Score de performance estimé avant publication"
		],
		benefices: [
			"Gain de temps : 70%",
			"Volume de vidéos : x3",
			"Rétention améliorée : +40%",
			"Constance de publication garantie"
		]
	},
	{
		titre: "Freelances monteurs vidéo",
		description: "Gain de temps, plus de clients, workflows standardisés",
		icon: "briefcase",
		avant: [
			"Impossible de gérer plus de 3-4 clients simultanément",
			"Workflows différents pour chaque client",
			"Tâches répétitives chronophages",
			"Difficulté à scaler l'activité"
		],
		apres: [
			"8-10 clients gérables simultanément",
			"Workflows standardisés et réutilisables",
			"Automatisation des tâches répétitives",
			"Activité scalable et rentable"
		],
		benefices: [
			"Clients gérables : x2.5",
			"Temps gagné : -60%",
			"Revenus augmentés : +150%",
			"Satisfaction client améliorée"
		]
	},
	{
		titre: "Agences social media",
		description: "Volume, collaboration, cohérence multi-plateformes",
		icon: "building",
		avant: [
			"Coordination d'équipe complexe",
			"Incohérence entre les vidéos",
			"Exports et révisions chronophages",
			"Difficulté à maintenir la qualité en volume"
		],
		apres: [
			"Collaboration fluide en temps réel",
			"Templates et standards partagés",
			"Exports en batch automatisés",
			"Qualité constante même en volume"
		],
		benefices: [
			"Volume de production : x4",
			"Temps de coordination : -70%",
			"Cohérence : 100%",
			"ROI client amélioré : +200%"
		]
	}
];
---

<Layout title="Pour qui ? - Cas d'usage Editrix" description="Découvrez comment Editrix transforme le workflow des créateurs, freelances et agences">
	<div class="card" style="text-align: center;">
		<h1>Pour qui est Editrix ?</h1>
		<p style="font-size: 1.2rem; color: #b0b0b0;">
			Découvrez comment Editrix transforme votre workflow de montage vidéo
		</p>
	</div>

	{profiles.map((profile) => (
		<div class="card">
			<div style="text-align: center; margin-bottom: 2rem;">
				<div style="margin-bottom: 1rem;">
					{profile.icon === "video" && <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="url(#gw1)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><defs><linearGradient id="gw1" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:#667eea"/><stop offset="100%" style="stop-color:#764ba2"/></linearGradient></defs><path d="m22 8-6 4 6 4V8Z"/><rect width="14" height="12" x="2" y="6" rx="2" ry="2"/></svg>}
					{profile.icon === "briefcase" && <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="url(#gw2)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><defs><linearGradient id="gw2" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:#667eea"/><stop offset="100%" style="stop-color:#764ba2"/></linearGradient></defs><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>}
					{profile.icon === "building" && <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="url(#gw3)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><defs><linearGradient id="gw3" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:#667eea"/><stop offset="100%" style="stop-color:#764ba2"/></linearGradient></defs><rect width="16" height="20" x="4" y="2" rx="2" ry="2"/><path d="M9 22v-4h6v4"/><path d="M8 6h.01"/><path d="M16 6h.01"/><path d="M12 6h.01"/><path d="M12 10h.01"/><path d="M12 14h.01"/><path d="M16 10h.01"/><path d="M16 14h.01"/><path d="M8 10h.01"/><path d="M8 14h.01"/></svg>}
				</div>
				<h2 style="margin-bottom: 0.5rem;">{profile.titre}</h2>
				<p class="neon-text" style="font-size: 1.1rem; font-weight: 600;">{profile.description}</p>
			</div>

			<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
				<div>
					<h3 style="color: #f87171; margin-bottom: 1rem;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:inline;vertical-align:-2px;margin-right:6px"><circle cx="12" cy="12" r="10"/><path d="m15 9-6 6"/><path d="m9 9 6 6"/></svg>Avant Editrix</h3>
					<ul style="list-style: none; padding: 0;">
						{profile.avant.map(item => (
							<li style="margin-bottom: 0.75rem; padding: 0.75rem; background: rgba(255, 51, 51, 0.05); border-radius: 8px; border-left: 3px solid #ff6699;">
								{item}
							</li>
						))}
					</ul>
				</div>

				<div>
					<h3 style="color: #4ade80; margin-bottom: 1rem;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:inline;vertical-align:-2px;margin-right:6px"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>Après Editrix</h3>
					<ul style="list-style: none; padding: 0;">
						{profile.apres.map(item => (
							<li style="margin-bottom: 0.75rem; padding: 0.75rem; background: rgba(51, 255, 153, 0.05); border-radius: 8px; border-left: 3px solid #66ff99;">
								{item}
							</li>
						))}
					</ul>
				</div>
			</div>

			<div>
				<h3 style="margin-bottom: 1rem; text-align: center;"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--accent-purple)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:inline;vertical-align:-3px;margin-right:6px"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>Bénéfices mesurables</h3>
				<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
					{profile.benefices.map(benefice => (
						<div style="padding: 1rem; text-align: center; background: rgba(255, 51, 153, 0.1); border-radius: 12px; border: 1px solid rgba(255, 51, 153, 0.2);">
							<p style="font-weight: 600; color: #ff3399;">{benefice}</p>
						</div>
					))}
				</div>
			</div>
		</div>
	))}

	<section class="card" style="text-align: center;">
		<h2>Vous vous reconnaissez ?</h2>
		<p style="margin-bottom: 2rem; font-size: 1.1rem;">
			Découvrez quelle offre Editrix est faite pour vous
		</p>
		<div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
			<a href="/products" class="button">Voir les produits</a>
			<a href="/contact" class="button button-secondary">Demander une démo</a>
		</div>
	</section>
</Layout>

<style>
	@media (max-width: 768px) {
		div[style*="grid-template-columns: 1fr 1fr"] {
			grid-template-columns: 1fr !important;
		}
	}
</style>
